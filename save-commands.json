{
	"timeout": 4000,
	"commands": [
		"*.coffee : coffee -c {relFullPath}",
		"src/**/*.coffee : coffee -c -o gen{relPathNoRoot} {relFullPath}",
		"src/**/*.coffee : browserify gen/app.js > gen/bundle.js",
		"src/**/*.jade   : jade -P {relPath}{filename} -o gen{relPathNoRoot}",
		"src/**/*.styl   : file-merge -r src -i **/*.styl -e **/bundle.styl -o gen/bundle.styl",
		"src/**/*.styl   : stylus gen/bundle.styl --out gen/bundle.css"

	]
}
